 
#include <iostream>
#include <iomanip>
#include <math.h>
using namespace std;

int main()
{
	double x[18],f[18],a;//f must value 0
	cout<<left<<setw(10)<<'x'<<left<<setw(10)<<"f(x)"<<left<<setw(10)<<"u(x)"
	<<left<<setw(10)<<"f'+(x)"<<left<<setw(10)<<"f'-(x)"<<left<<setw(10)<<"f'+-(x)"<<endl;
	for(int i=0,k;i<=17;i++,k=0)
	{
		(i>0)?x[i]=x[i-1]+0.1:x[i]=0;//set x values
		a=1;
		while(fabs(a)>0.0000001)//counting f
		{
			f[i]+=a;
			a*=-x[i]/((2*k+3)*(2*k+2));
			k+=1;
		}
		k=0;
	}

	cout<<left<<setw(10)<<x[0]<<left<<setw(10)<<f[0]<<left<<setw(10)<<1/sqrt(x[0])*sin (sqrt (x[0]))
	<<left<<setw(10)<<(f[1]-f[0])/0.1<<left<<setw(10)<<"---"<<left<<setw(10)<<"---"<<endl;//boundary values
	for(int i=1;i<17;i++)//central values
	{
		cout<<left<<setw(10)<<x[i]<<left<<setw(10)<<f[i]<<left<<setw(10)<<1/sqrt(x[i])*sin (sqrt (x[i]))<<left<<setw(10)
		<<(f[i+1]-f[i])/0.1<<left<<setw(10)<<(f[i]-f[i-1])/0.1<<left<<setw(10)<<(f[i+1]-f[i-1])/0.2<<endl;

	}
	cout<<left<<setw(10)<<x[17]<<left<<setw(10)<<f[17]<<left<<setw(10)<<1/sqrt(x[17])*sin (sqrt (x[17]))
	<<left<<setw(10)<<"---"<<left<<setw(10)<<(f[17]-f[16])/0.1<<left<<setw(10)<<"---"<<endl;//boundary values
	return 0;
}
